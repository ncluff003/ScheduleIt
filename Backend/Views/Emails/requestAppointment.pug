extends baseEmail

block content
  table(style="position: relative; display: block; max-width: 100vw; width: 800px; margin: 0 auto; padding: 0; border: 3px groove #BBBBBB77; border-top: none; border-bottom: none; background-color: #CCCCCC33; color: #333333;") 
    tbody
      tr.table-row
        td.table-data(style="position: relative; display: block; width: 89%; margin: 0 auto;")  
          blockquote.salutations(style="position: relative; border: none; margin: 0 auto 30px; text-indent: 20px; font-size: 16px; color: #333333;")= `${calendar.getGreeting()} ${firstName} ${lastName},`
      tr.table-row 
        td.table-data(style="position: relative; display: block; width: 87%; margin: 0 auto;") 
          blockquote.salutations(style="position: relative; border: none; text-indent: 20px; font-size: 16px; color: #333333;") A potential client or employer named #{clientFirstName} #{clientLastName} would like to chat via #{communicationPreference.toLowerCase()} on #{scheduledDate} between #{humanScheduledStart} to #{humanScheduledEnd}.  Their email is #{clientEmail}, and their phone number is #{clientPhone}.

          - const messages = message.split(/\r?\n/);
          each message in messages
            p.paragraph #{message}

      tr.table-row(style="position: relative; display: flex; text-align: center; width: 100%; padding: 10px 0;") 
        td.table-button(style="position: relative; display: block; width: 40%; margin: 0 auto; padding: 0; border: 2px solid #3699FF; border-radius: 15px; background-color: rgba(54,153,255,.6); color: #FAFAFA99;" onmouseover="this.style.backgroundColor = #3699FF; this.color = #FAFAFA;" onmouseleave="this.style.backgroundColor = #2A7FFF55; this.color = #FAFAFA99;")
          a.link(href=`${url}/Accept/${communicationPreference}/${requestDate}/${scheduledDateISO}/${scheduledStart}/${scheduledEnd}/${clientFirstName}/${clientLastName}/${clientEmail}/${clientPhone}`, target="_blank" style="position: relative; display: block; width: 83.5%; padding: 27px; border-radius: 10px; margin: auto; font-size: 18px; text-decoration: none; color: rgba(250, 250, 250, .8)" onmouseover=" this.style.color = #FAFAFA;") Accept
        td.table-button(style="position: relative; display: block; width: 40%; margin: 0 auto; padding: 0; border: 2px solid #3699FF; border-radius: 15px; background-color: rgba(54,153,255,.6); color: #FAFAFA99;" onmouseover="this.style.backgroundColor = #3699FF; this.color = #FAFAFA;" onmouseleave="this.style.backgroundColor = #3699FF55; this.color = #FAFAFA99;")
          a.link(href=`${url}/Decline/${ownerEmail}/${clientFirstName}/${clientLastName}/${clientEmail}`, target="_blank" style="position: relative; display: block; width: 83.5%; padding: 27px; border-radius: 10px; margin: auto; font-size: 18px; text-decoration: none; color: rgba(250, 250, 250, .8)" onmouseover=" this.style.color = #FAFAFA;") Decline
      tr.disclaimer(style="position: relative; margin: 0 auto; padding: 20px 0 0; display: block; width: 87%; font-size: 16px;" colspan="2")
        td.disclaimer-text(style="position: relative; text-align: center; padding: 0 20px;") If you are not able to take any more appointments, do the potential client a solid and let them know. üòÑ üëç